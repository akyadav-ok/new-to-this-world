#include <iostream>
using namespace std;

class myarray
{	private:
		int size;
		int *arr;
		
	public:
		myarray(int s)
		{
			size=s;
			arr=new int[size];
			
		}
		int fill()
		{   
		   cout<<"Enter Array Elements :"<<endl;
			for(int i=0;i<size;i++)
			{
				cin>>arr[i];
				
				
			}
			return size-1;
		}
		void display()
		{   cout<<"Array is : ";
			for(int i=0;i<size;i++)
			{
				cout<<arr[i]<<" ";
				
			}
			
		}
	    void selection_sort()
	    {  int min_index;
	    	for (int i =0;i<size;i++)
	    	{  
	    	    min_index=i;
	    		for (int j=i+1;j<size;j++)
	    		{
	    			if (arr[j]<arr[min_index])
	    			    
	    			     min_index=j;
	    			
					int then=arr[min_index];
					arr[min_index]=arr[i];
					arr[i]=then;
					     
				}
			}
			cout<<endl;
			cout<<"Sorted Array is :: ";
			for (int k=0;k<size;k++)
			{ 
				cout<<arr[k]<<" ";
				
			}
		}
		
		
		
	
};

int main()
{   int n;
    cout<<" Enter array size ";
    cin>>n;
	myarray m1(n);
	int last= m1.fill();
	m1.display();
	m1.selection_sort();
	
	
	
	
	
}
