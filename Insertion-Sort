#include <iostream>
using namespace std;

class myarray
{	private:
		int size;
		int *arr;
		
	public:
		myarray(int s)
		{
			size=s;
			arr=new int[size];
			
		}
		int fill()
		{   
		   cout<<"Enter Array Elements :"<<endl;
			for(int i=0;i<size;i++)
			{
				cin>>arr[i];
				
				
			}
			return size-1;
		}
		void display()
		{   cout<<"Array is : ";
			for(int i=0;i<size;i++)
			{
				cout<<arr[i]<<" ";
				
			}
			
		}
	    void insertion_sort()
	    {   
	    	int k,j;
	    	for (int i=1;i<size;i++)
	    	{
	    		k=arr[i];
	    		j=i-1;
	    		
	    		while(j>=0 && arr[j]>k)
	    		{
	    			arr[j+1]=arr[j];
	    			j=j-1;
				}
				arr[j+1]=k;
			}
			cout<<endl;
			cout<<"sorted Array is :: ";
			for(int p=0;p<size;p++)
			{
				cout<<arr[p]<<" ";
			}
	    
		}
		
		
		
	
};

int main()
{   int n;
    cout<<" Enter array size ";
    cin>>n;
	myarray m1(n);
	int last= m1.fill();
	m1.display();
	m1.insertion_sort();
	
	
	
	
	
}
